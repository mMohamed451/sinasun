  <div id="container" class="log-form">
    <h1 style="text-align:center">Upload a product</h1>


    <%= typeof msg != 'undefined' ? msg : '' %>
    <form action="/upload" method="POST" enctype="multipart/form-data">
     
      <div class="line">
          <span class="labels">Product Title:</span>
          <input type="text" name="title" style="
              border: 1px solid black;
              padding: 0;
              font-size: 25px;
              background: gainsboro;
              border-radius: 10px;
          ">
          <select name="category" id="category">
            <option></option>
            <option value="HONEY">HONEY</option>
            <option value="OLIVES">OLIVES</option>
            <option value="DATES">DATES</option>
            <option value="OTHERS">Others</option>
          </select>
        </div>
      <br>
      <div class="line">
          <span class="labels">Upload an image:</span>
          <input id="myImage" name="myImage" type="file">
        </div>
   
      <br>
      <div class="line">
          <span class="labels">Upload an image:</span>
          <input id="myImage" name="myImage" type="file">
      </div>

      <img src="<%= typeof file != 'undefined'? myImage : '' %>">

      <button type="submit" style="
          width: 70%;
          margin: auto;
      ">Button</button>
    </form>

  </div>
